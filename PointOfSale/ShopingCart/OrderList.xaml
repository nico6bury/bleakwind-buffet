<UserControl x:Class="PointOfSale.ShopingCart.OrderList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ShopingCart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" FontWeight="Bold" TextAlignment="Center"
                   FontSize="20">
            Order Name:
        </TextBlock>
        <TextBox DockPanel.Dock="Top" FontWeight="Bold" TextAlignment="Center"
                 FontSize="20"/>

        <Border DockPanel.Dock="Bottom" Height="35" BorderThickness="1" BorderBrush="SlateGray">
            <TextBlock Name="orderNumberTextBlock">
            This is what will show which order<LineBreak/> you're on</TextBlock>
            
        </Border>
        <Border DockPanel.Dock="Bottom" Height="35" BorderThickness="1" BorderBrush="SlateGray">
            <TextBlock Name="orderTotalTextBlock">
            This is where the total will go<LineBreak/>Also tax</TextBlock>
        </Border>
        
        <ListView Name="orderItems" DockPanel.Dock="Bottom"/>
    </DockPanel>
</UserControl>

<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale" xmlns:local1="clr-namespace:PointOfSale.ItemSelection"
        mc:Ignorable="d"
        Title="Bleakwind Buffet" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="SlateGray">
            <local1:ItemSelector/>
        </Border>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="SlateGray">
            <local:Cart/>
        </Border>
    </Grid>
</Window>
